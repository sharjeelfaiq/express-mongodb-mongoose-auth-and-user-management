{
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "node", // or "node16" or "nodeNext"
    "target": "ES2022", // Optional but consistent
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": "./src",
    "paths": {
      "#config/*": [
        "config/*"
      ],
      "#constants/*": [
        "constants/*"
      ],
      "#data-access/*": [
        "data-access/*"
      ],
      "#dtos/*": [
        "dtos/*"
      ],
      "#middleware/*": [
        "middleware/*"
      ],
      "#models/*": [
        "models/*"
      ],
      "#routes/*": [
        "routes/*"
      ],
      "#services/*": [
        "services/*"
      ],
      "#utils/*": [
        "utils/*"
      ]
    },
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}