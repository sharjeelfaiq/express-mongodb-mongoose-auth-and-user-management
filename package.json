{
  "name": "backend",
  "version": "1.0.0",
  "type": "module",
  "license": "ISC",
  "main": "src/index.ts",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "format": "prettier --write \"./**/*.{js,jsx,html,yaml,env,md,json,txt}\"",
    "lint": "eslint \"./**/*.js\"",
    "test": "echo \"No tests yet\" && exit 0",
    "check circularDeps": "npx madge --circular ./src",
    "generateTree": "pwsh generateTree.ps1",
