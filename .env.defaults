# This is a default .env file template for a Node.js application.
# Copy this file to .env and fill in the required values.
# Make sure to keep this file out of version control by adding it to .gitignore.

# Environment
NODE_ENV=development
PORT=5000

# Base URLs
BACKEND_BASE_URL_DEV=http://localhost:5000
FRONTEND_BASE_URL_DEV=http://localhost:5173

BACKEND_BASE_URL_PROD=https://your-backend-domain.com
FRONTEND_BASE_URL_PROD=https://your-frontend-domain.com

# MongoDB
DATABASE_URI=mongodb+srv://<username>:<password>@<cluster-url>/<database-name>

# JWT Configuration
JWT_SECRET_KEY=your_jwt_secret_key
JWT_ALGORITHM=HS256
JWT_SHORT_EXPIRY=1h
JWT_LONG_EXPIRY=7d

# Email Server
EMAIL_HOST=smtp.your-email-provider.com
EMAIL_PORT=587
USER_EMAIL=your_email@example.com
USER_PASSWORD=your_email_password

# Twilio (for SMS/Voice)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_VERIFY_SERVICE_SID=your_twilio_verify_service_sid

# Cloudinary (for image storage)
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret
